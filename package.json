{
  "name": "physics-of-baseball",
  "version": "1.0.0",
  "description": "Interactive physics of baseball educational web application - Modern Vanilla JavaScript",
  "type": "module",
  "scripts": {
    "dev": "python -m http.server 8080",
    "start": "python -m http.server 8080",
    "serve": "python -m http.server 8080",
    "test": "playwright test",
    "test:regression": "playwright test tests/regression/",
    "test:headed": "HEADED=true playwright test tests/regression/",
    "test:debug": "playwright test --project=debug",
    "test:mobile": "playwright test --project=regression-mobile-chrome --project=regression-mobile-safari",
    "test:ci": "CI=true playwright test tests/regression/",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:original": "open tests/test-runner.html"
  },
  "keywords": [
    "physics",
    "baseball",
    "education",
    "interactive",
    "vanilla-js",
    "modern-web",
    "playwright",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
}